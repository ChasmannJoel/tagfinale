{
  "manifest_version": 3,
  "name": "Observador AutoTag",
  "version": "1.0",
  "description": "Observa y etiqueta chats autom√°ticamente en Clientify con nomenclatura inteligente.",
  "permissions": ["tabs", "scripting", "activeTab"],
  "host_permissions": ["https://new.clientify.com/*"],
  "action": {
    "default_popup": "codigo/popup.html",
    "default_icon": {
      "16": "codigo/icon.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://new.clientify.com/team-inbox/*"],
      "js": ["codigo/chatOpener.js", "codigo/chatTagger.js", "codigo/elementos observer/url-mapper.js", "codigo/elementos observer/url-detector.js", "codigo/chatObserver.js", "codigo/content.js"]
    }
  ]
}
